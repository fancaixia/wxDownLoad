/* 个人信息 */

.intro {
  height: 236rpx;
  margin: 100rpx 30rpx 0rpx 30rpx;
  background-color: rgba(70, 101, 134, 0.521);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0px 20rpx 0px 20rpx;
}

.desc {
  color: #fff;
  font-size: 30rpx;
}

.logo {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  margin-right: 30rpx;
}

.btn {
  height: 216rpx;
  width: 288rpx;
  line-height: 216rpx;
  font-size: 72rpx;
  color: white;
  background: linear-gradient(to bottom, #405f80, #7aa3d7);
  border-radius: 50%;
  box-shadow: 0rpx 30rpx 5rpx #7aa3d7;
  margin: 40rpx auto 60rpx auto;
  text-align: center;
}

.btn::after {
  border: none;
}

.btn-click {
  position: relative;
  top: 10rpx;
  box-shadow: 0rpx 20rpx 5rpx #405f80;
}

.content {
  margin: 20rpx 30rpx 0rpx 30rpx;
  color: white;
}

.content-title {
  text-align: center;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  background-color: rgba(255, 255, 255, 0.2);
  position: relative;
}

.content-text {
  padding: 20rpx;
  font-size: 28rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  background-color: rgba(255, 255, 255, 0.1);
  line-height: 2;
}

